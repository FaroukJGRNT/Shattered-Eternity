script/source = "extends InteractibleLevelObject

var released := false

func _ready() -> void:
	modulate.a = 0.4
	$HelpOverheadText.the_text = \"Kill all enemies first!\"

func interact():
	if released and not interacted:
		var modal = ui_manager.show_modal(load(\"res://ui/molecules/buff_selection_modal.tscn\"))
		modal.setup_buffs()
		interacted = true
		queue_free()

func _process(delta: float) -> void:
	if active:
		$HelpOverheadText.global_position = player_ref.global_position + offset
		if Input.is_action_just_pressed(interaction_action):
			interact()
	
	if len(get_tree().get_nodes_in_group(\"Enemy\")) == 0:
		modulate.a = 1.0
		released = true
		$HelpOverheadText.the_text = \"Interact\"
"

